{
	"compileOnSave": true,
	"compilerOptions":
	{
    "baseUrl": ".",
    "allowJs": false,
		"lib": [ "es2020", "dom" ],
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
    "outDir": "./dist-build-ts",
		"declaration": true,
		"declarationMap": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./types"
    ],
    "paths": {
      "@/*": [
        "src-ts/*"
      ],
      "/#/*": [
        "types/*"
      ]
    }
	},
	"include": [
		"src-ts",
		"types/**/*.d.ts",
		"types/**/*.ts",
	]
}
